<!-- Card structure -->

<!-- <div class="col-xs-12"> -->
  <div class="card">

    <%= link_to place_path(post.place) do %>

      <div class="card-top" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.0)), url(<%= image_path(post.photo.url(:standard)) %>);">
      </div>
    <% end %>

    <div class="card-bottom card-bottom-post">
      <div class="friends-card-bottom">
        <p> <strong>
          <% if current_user == post.user %>
            <%= "You" %>
          <% else %>
            <%= post.user.first_name.capitalize  %>
          <% end %>
        </strong> visited  <strong><%= post.place.name %></strong><br><span style="font-size:0.8em"> <%= "#{time_ago_in_words(post.created_at)} ago" %> </span>
      <small> <%= "in #{post.place.neighbourhood}" if !post.place.neighbourhood.nil? %> </small> </p>
      </div>
      <%= render 'shared/wishlist_link', place: post.place %>
      <div >
        <%# raise %>
        <% if !(current_user == post.user) %>
          <%= link_to image_tag(post.user.photo.url(:bright_face), class: "avatar-bordered"), user_path(post.user) %>
        <% end %>
      </div>
      <div class="note">
        <% if !post.note.empty? %>
          <div class="display-less" data-post-id="<%= post.id %>">
            <p><%=  post.note %></p>
          </div>
          <a class="show-more-text" data-post-id="<%= post.id %>">
          <%= "... more" if post.note.length > 75 %></a>
        <% end %>
      </div>
    <% if !(post.tags.records == []) %>
      <div class="tags-card-bottom">
          <ul class="tags">
              <% post.tags.first(3).each do |tag| %>
              <li><a> <%= tag.name %></a></li>
              <% end %>
          </ul>
      </div>
            <% end %>
    </div>
  </div>
